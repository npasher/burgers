<div class="devoured">
{{#each burger}}
	{{#if devoured}}
		<p>{{this.id}}.{{this.burger_name}}<button id={{id}} class="delete">DELETE</button><button id={{id}} class="makeAnother">RECREATE BURGER</button></p>
	{{/if}}
{{/each}}
</div>
<div class="undevoured">
	{{#each burger}}
		{{#unless devoured}}
			<p>{{this.id}}.{{this.burger_name}}</p>
			<button id={{id}} class="devour">DEVOUR</button>
		{{/unless}}
	{{/each}}
</div>